<h1 class="page-header">Login</h1>

<div class="row">
    <div class="col-sm-6">
      <%= form_tag '/login' do %>

        <div class="form-group">
          <%= label :email %>
          <%= text_field_tag :email, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label :password %>
          <%= password_field_tag :password, class: 'form-control' %>
        </div>

        <%= submit_tag "Login", class: "btn btn-primary"%>

      <% end %>
    </div>
</div>
